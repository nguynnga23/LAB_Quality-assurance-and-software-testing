<UserControl x:Class="ATMMetro2.ChangePIN.ConfirmPIN"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:usercontrol="clr-namespace:ATMMetro2.Controls"
     Height="500" Width="800">
    <UserControl.Resources>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <TextBlock Margin="30" 
                       HorizontalAlignment="Center" 
                       Text="Confirm your new PIN" 
                       FontSize="30"/>
          </Grid>
        <Grid Grid.Row="2">
            <PasswordBox x:Name="PIN"
                         MaxLength="6"
                     FontSize="30"
                     Grid.Row="2"
                     Height="35"
                     Width="125"
                     HorizontalContentAlignment="Center"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"/>
        </Grid>
        <Grid Grid.Row="3">
            <Button x:Name="OK" Content="OK"
                        Grid.Row="3"
                        Height="50"
                        Width="100"
                        Margin="20 0 0 50"  
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        Background="Green" Click="OK_Click" />
            <Button x:Name="Clear" 
                        Content="Clear"
                        Grid.Row="3"
                        Height="50"
                        Width="100"
                        Margin="0 0 20 50"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Background="Green" Click="Clear_Click" />
            <Button x:Name="Cancel" 
                        Content="Cancel"
                        Grid.Row="3"
                        Height="50"
                        Width="100"
                        Margin="0 0 20 50"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Background="Green" Click="Cancel_Click" />
        </Grid>
        <Grid Grid.Row="4">
            <TextBlock x:Name="txtConfirmPin" 
                       Foreground="Blue" 
                       Visibility="Collapsed" 
                       FontSize="30" 
                       HorizontalAlignment="Center" 
                       Text="Your PIN is incorrect!"/>

        </Grid>

    </Grid>
</UserControl>
