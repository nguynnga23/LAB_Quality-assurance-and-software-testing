<UserControl x:Class="ATMMetro2.View.InsertPINView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="500" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="50" />
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="WelcomeTitle" 
                   Text="Welcome"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="30"
                   Foreground="Green"
                   Margin="5"/>
        <TextBlock x:Name="Title" 
                   Grid.Row="1"
                   Text="Please enter your 6 digit PIN"
                   FontSize="26"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        <PasswordBox x:Name="PIN"
                     MaxLength="6"
                     FontSize="30"
                     Grid.Row="2"
                     Height="35"
                     Width="125"
                     HorizontalContentAlignment="Center"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"/>
        <Grid Grid.Row="3">
            <Button x:Name="OK" Content="OK"
                        Grid.Row="3"
                        Height="50"
                        Width="100"
                        Margin="20 0 0 50" 
                        Click="OK_Click" 
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        Background="Green"/>
        <Button x:Name="Clear" 
                        Content="Clear"
                        Grid.Row="3"
                        Height="50"
                        Width="100"
                        Margin="0 0 20 50"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Background="Green" Click="Clear_Click" />
                <Button x:Name="Cancel" 
                        Content="Cancel"
                        Grid.Row="3"
                        Height="50"
                        Width="100"
                        Margin="0 0 20 50"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Background="Green" Click="Cancel_Click" />
        </Grid>
        <TextBlock Grid.Row="4" 
                   Text="PIN is incorrect"              
                   FontSize="30"
                   Foreground="Red"
                   HorizontalAlignment="Center"
                   Margin="276,16,299,46"
                   Visibility="Hidden"
                   Name="label1" />
    </Grid>
</UserControl>
